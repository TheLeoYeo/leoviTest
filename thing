package com.company;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        Foot foot = new Foot(100,"good",5);
        Foot fred = new Foot(7,"bad",4);

        new Print(foot);

        Body body = new Body("bob");
        body.addPart(foot);
        body.addPart(fred);

        System.out.println("'specifc' body part or all??");
        String choice = sc.nextLine();
        if(choice.equals("specific")){
            int num= sc.nextInt();
            var thing = body.getFoot(num);
            new Print(thing);
        } else{
            var thing = body.getFoot();
            for(int i=0;i<thing.length;i++){
                new Print(thing[i]);
            }
        }

        sc.close();

    }
}
